{{define "base"}}
<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>{{.title}} - HOA</title>
  <link href="/static/css/styles.css" rel="stylesheet">
</head>
<body>
  <header class="site-header">
    <div class="container">
      <a class="brand" href="/">HOA</a>
      <nav class="nav">
          {{if .phoneNumber}}
            <span class="muted">Logged in as {{.phoneNumber}}</span>
            <a href="/logout" class="btn" style="margin-left:8px;">Logout</a>
          {{else}}
            <a href="/login">Login</a>
          {{end}}
      </nav>
    </div>
  </header>

  <main class="container">

{{/*      {{template "content" .}}*/}}
      {{if eq .content "login.content"}}
          {{template "login.content" .}}
      {{else if eq .content "register.content"}}
          {{template "register.content" .}}
      {{else }}
      <h3>Welcome to the club </h3>
      {{end}}

  </main>

  <footer class="site-footer">
    <div class="container">
      <small>HOA demo</small>
    </div>
  </footer>

  <script src="/static/js/auth.js"></script>
</body>
</html>
{{end}}
